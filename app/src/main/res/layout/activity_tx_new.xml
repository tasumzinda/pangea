<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <Button
                android:id="@+id/btn_submit"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selectable_item_background"
                android:text="Submit"
                android:textColor="@color/white" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Description: Number of adults and children newly enrolled on antiretroviral therapy"
                android:textStyle="bold" />

        <TextView
                style="@style/TextViewInputStyle"
                android:text="Select Facility"></TextView>

        <Spinner
                android:id="@+id/facility"
                style="@style/SpinnerStyle" />
        <EditText
                android:id="@+id/facility_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                style="@style/TextViewInputStyle"
                android:text="Select Period"></TextView>

        <Spinner
                android:id="@+id/period"
                style="@style/SpinnerStyle" />

        <TextView
                style="@style/TextViewInputStyle"
                android:text="Date Completed" />

        <EditText
                android:id="@+id/dateCreated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date Completed" />

        <TextView
                style="@style/TextViewInputStyle"
                android:text="Name" />

        <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name" />

        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                <TextView
                        style="@style/TextViewStyle1"
                        android:text="Numerator" />

                <EditText
                        android:id="@+id/numerator"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

            </TableRow>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/dividerHorizontal" />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textSize="17dp"
                    android:text="Disaggregated by Pregnancy and Breastfeeding Status at ART initiation"
                    android:textStyle="bold" />
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                <TextView
                        style="@style/TextViewStyle1"
                        android:text="Pregnant" />

                <EditText
                        android:id="@+id/pregnant"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

            </TableRow>
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                <TextView
                        style="@style/TextViewStyle1"
                        android:text="Breast Feeding" />

                <EditText
                        android:id="@+id/breastFeeding"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

            </TableRow>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/dividerHorizontal" />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Disaggregated by Confirmed Diagnosis of TB"
                    android:textStyle="bold" />
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                <TextView
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:textStyle="bold"
                        android:text="Confirmed TB and / or TB Tested" />

                <EditText
                        android:id="@+id/confirmedTB"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

            </TableRow>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/dividerHorizontal" />
            <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Disaggregated by key population type "
                    android:textSize="17dp"
                    android:textStyle="bold" />
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                <TextView
                        style="@style/TextViewStyle1"
                        android:text="PWID" />

                <EditText
                        android:id="@+id/pwid"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

            </TableRow>
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                <TextView
                        style="@style/TextViewStyle1"
                        android:text="MSM" />

                <EditText
                        android:id="@+id/msim"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

            </TableRow>
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                <TextView
                        style="@style/TextViewStyle1"
                        android:text="TransGender" />

                <EditText
                        android:id="@+id/transGender"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

            </TableRow>
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                <TextView
                        style="@style/TextViewStyle1"
                        android:text="FSW" />

                <EditText
                        android:id="@+id/fsw"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

            </TableRow>
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                <TextView
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:text="People in prison and other enclosed settings" />

                <EditText
                        android:id="@+id/prisonAndEnclosedSettings"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

            </TableRow>-->
            <Button
                    android:id="@+id/btn_num_disagg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Question_1" />
            <Button
                    android:id="@+id/btn_save"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selectable_item_background"
                    android:text="Save"
                    android:textColor="@color/white" />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/dividerHorizontal" />

            <Button
                    android:id="@+id/btn_completed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:drawablePadding="16dp"
                    android:drawableTop="@mipmap/ic_check"
                    android:text="Submitted"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

        </TableLayout>


    </LinearLayout>
</ScrollView>
