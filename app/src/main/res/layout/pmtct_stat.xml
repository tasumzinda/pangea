<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                style="@style/TextViewStyle"></TextView>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="P2: Pregnant Women HIV tested for the first time in ANC and received results"
                        android:paddingBottom="@dimen/fab_margin" />

                    <EditText
                        android:id="@+id/pmtctSTATP2"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </TableRow>
                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip">

                    <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="P4: Pregnant Women testing HIV positive in ANC"
                            android:paddingBottom="@dimen/fab_margin" />

                    <EditText
                            android:id="@+id/pmtctSTATP12DisaggregationP4"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:inputType="number" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="P5: Pregnant women booking for first ANC visit with known HIV positive result"
                        android:paddingBottom="@dimen/fab_margin" />

                    <EditText
                        android:id="@+id/pmtctSTATP5"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

                </TableRow>
                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip">

                    <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="P6: Pregnant women booking for first ANC"
                            android:paddingBottom="@dimen/fab_margin" />

                    <EditText
                            android:id="@+id/pmtctSTATP1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:inputType="number" />

                </TableRow>

                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip">

                    <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="P12: Women arriving in L&amp;D with unknown HIV status"
                            android:paddingBottom="@dimen/fab_margin" />

                    <EditText
                            android:id="@+id/pmtctSTATP12"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:inputType="number" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="P13: Women tested in L&amp;D for the first time and received results"
                        android:paddingBottom="@dimen/fab_margin" />

                    <EditText
                        android:id="@+id/pmtctSTATP13"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </TableRow>





                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="P14: Women testing HIV positive at first Test in L&amp;D"
                        android:paddingBottom="@dimen/fab_margin" />

                    <EditText
                        android:id="@+id/pmtctSTATP12DisaggregationP14"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="P17: Woman testing HIV positive at retesting in L&amp;D"
                        android:paddingBottom="@dimen/fab_margin" />

                    <EditText
                        android:id="@+id/pmtctSTATP12DisaggregationP17"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Pregnant women booking for first ANC visit with known HIV positive resutlt"
                        android:paddingBottom="@dimen/fab_margin" />

                    <EditText
                        android:id="@+id/pmtctSTATP12DisaggregationP5"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

                </TableRow>

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save" />

            </TableLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>