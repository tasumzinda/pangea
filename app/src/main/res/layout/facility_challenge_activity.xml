<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/txt_name"
                style="@style/TextViewStyle"></TextView>

            <TextView
                style="@style/TextViewInputStyle"
                android:text="Challenge Category"></TextView>

            <Spinner
                android:id="@+id/challenge"
                style="@style/SpinnerStyle" />

            <TextView
                android:id="@+id/txt_other"
                style="@style/TextViewInputStyle"
                android:text="Please Specify/Describe Challenge"></TextView>

            <EditText
                android:id="@+id/others"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="Describe the Challenge Category"
                android:inputType="textMultiLine"
                android:lines="5"
                android:scrollHorizontally="false" />

            <TextView
                style="@style/TextViewInputStyle"
                android:text="Challenge Detail"></TextView>

            <EditText
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="Enter the Specific details of the Challenge"
                android:inputType="textMultiLine"
                android:lines="5"
                android:scrollHorizontally="false" />

            <TextView
                style="@style/TextViewInputStyle"
                android:text="Expected Outcome"></TextView>

            <EditText
                android:id="@+id/expected_outcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="Describe the expected outcome"
                android:inputType="textMultiLine"
                android:lines="5"
                android:scrollHorizontally="false" />

            <TextView
                style="@style/TextViewInputStyle"
                android:text="S - Is the EXPECTED OUTCOME Specific?"></TextView>

            <Spinner
                android:id="@+id/specific"
                style="@style/SpinnerStyle" />

            <TextView
                style="@style/TextViewInputStyle"
                android:text="M – How will you measure progress towards achievement of EXPECTED OUTCOME"></TextView>

            <EditText
                android:id="@+id/measurementMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint=""
                android:inputType="textMultiLine"
                android:lines="5"
                android:scrollHorizontally="false" />

            <TextView
                style="@style/TextViewInputStyle"
                android:text="A – Is the EXPECTED OUTCOME Achievable?"></TextView>

            <Spinner
                android:id="@+id/achievable"
                style="@style/SpinnerStyle" />

            <TextView
                style="@style/TextViewInputStyle"
                android:text="R- Is the EXPECTED OUTCOME Realistic?"></TextView>

            <Spinner
                android:id="@+id/realistic"
                style="@style/SpinnerStyle" />

            <TextView
                style="@style/TextViewInputStyle"
                android:text="T – When will the EXPECTED OUTCOME be achieved?"></TextView>

            <EditText
                android:id="@+id/expected_completion_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/TextViewInputStyle"
                android:text="ACTION TAKEN CATEGORY"></TextView>

            <Spinner
                android:id="@+id/action_taken_category"
                style="@style/SpinnerStyle" />

            <TextView
                style="@style/TextViewInputStyle"
                android:text="ACTION TAKEN DETAIL"></TextView>

            <EditText
                android:id="@+id/action_taken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="Describe action taken if any"
                android:inputType="textMultiLine"
                android:lines="5"
                android:scrollHorizontally="false"
                android:text="" />

            <TextView
                style="@style/TextViewInputStyle"
                android:text="Challenge Status"></TextView>

            <Spinner
                android:id="@+id/challenge_status"
                style="@style/SpinnerStyle" />

            <TextView
                android:id="@+id/txt_follow_up_date"
                style="@style/TextViewInputStyle"
                android:text="Follow up date"></TextView>

            <EditText
                android:id="@+id/follow_up_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_load"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
