<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:id="@+id/txt_name"
                style="@style/TextViewStyle"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="1dp" />

            <TextView
                android:id="@+id/txt_visit"
                style="@style/TextViewStyle"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="1dp" />

            <TextView
                android:id="@+id/txt_challenge"
                style="@style/TextViewStyle"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="1dp" />

            <TextView
                android:id="@+id/txt_view_mentees"
                style="@style/TextViewStyle"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="1dp" />

            <TextView
                android:id="@+id/txt_view_mentors"
                style="@style/TextViewStyle"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="1dp" />

            <LinearLayout
                android:id="@+id/optionsLayout1"
                style="@android:style/ButtonBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_add_mentee"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="onDrawSelectorOnTop"
                    android:text="Select Facility Staff" />

                <Button
                    android:id="@+id/btn_add_mentor"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="onDrawSelectorOnTop"
                    android:text="Select Team Members" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/optionsLayout"
                style="@android:style/ButtonBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_add_visit_report"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="onDrawSelectorOnTop"
                    android:text="ADD NEW REPORT" />


                <Button
                    android:id="@+id/btn_load"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="REVIEW FACILITY CHALLENGES" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/optionsLayout2"
                style="@android:style/ButtonBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btn_add_facility_challenge"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="onUseSelectorAsBackground"
                    android:text="ADD NEW CHALLENGE" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Check out" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Submit" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_completed"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_check"
                android:textColor="@android:color/black"
                android:drawablePadding="16dp"
                android:background="@null"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:text="Checked Out"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
