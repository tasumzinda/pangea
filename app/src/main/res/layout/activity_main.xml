<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_height_3">

        <LinearLayout
            android:id="@+id/tbl_national"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_option_one"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="@color/white"
                android:background="@drawable/selectable_item_background"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Abstraction" />

            <Button
                android:id="@+id/btn_option_two"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="@color/white"
                android:background="@drawable/selectable_item_background"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="DSD" />

            <Button
                android:id="@+id/btn_option_three"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="@color/white"
                android:background="@drawable/selectable_item_background"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="OSDV" />

            <Button
                    android:id="@+id/btn_option_four"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/white"
                    android:background="@drawable/selectable_item_background"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ESTA3" />

            <Button
                    android:id="@+id/btn_option_five"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/white"
                    android:background="@drawable/selectable_item_background"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ESTA4" />

            <Button
                    android:id="@+id/btn_option_six"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/white"
                    android:background="@drawable/selectable_item_background"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ESTA5" />
            <Button
                    android:id="@+id/btn_option_seven"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="@color/white"
                    android:background="@drawable/selectable_item_background"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="HTS_TST" />

        </LinearLayout>

        <ListView
            android:id="@+id/facility_list_view"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <include layout="@layout/empty_list" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            card_view:cardCornerRadius="2dp"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/txt_name"
                    style="@style/TextViewStyle3"></TextView>

                <TextView
                    android:id="@+id/txt_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_name"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
